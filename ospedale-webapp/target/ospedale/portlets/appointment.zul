                                    		PatientCorporateDocument lastElement = null;
                                    		corporatePatientContinue = false;
                                    	    while(itr.hasNext()) {
                                    	        lastElement= (PatientCorporateDocument) itr.next();
                                    	        if(lastElement.getValidUpTo().compareTo(new Date()) >= 0)

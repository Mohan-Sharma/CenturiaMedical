                    <zscript>
                        void displayVisitType(){
                        Events.postEvent("onClick", freeSlot, null);
                        com.nzion.domain.SoapNoteType visitType = null;
                        Events.postEvent("onEditProviderList",providerList,null);
                        if(providerList.getSelectedItem()!=null){
                        Provider doctor = providerList.getSelectedItem().getValue();
                        if(doctor.getSoapNoteType()!=null){
                        visitType = doctor.getSoapNoteType();
                        visitTypebox.setValue(visitType.toString());
                        currentSchedule.setVisitType(visitType);
                        }
                        }
                        }

                        void showReasonsIfStatusCancelled(){
                        if(scheduleStatuses.getValue().equals("CANCELLED")){
                        reasonDiv.setVisible(true);
                        cancelDiv.setVisible(false);
                        currentSchedule.setPatientCancel(false);
                        currentSchedule.setClinicCancel(true);
                        } else {
                        reasonDiv.setVisible(false);
                        cancelDiv.setVisible(false);
                        currentSchedule.setPatientCancel(false);
                        currentSchedule.setClinicCancel(false);
                        }

                        if(scheduleStatuses.getValue().equals("NOSHOW")){
                        noShowDiv.setVisible(true);
                        } else {
                        noShowDiv.setVisible(false);
                        }
                        }
